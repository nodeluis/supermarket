<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.supermercado.ui.home.HomeFragment"
        android:label="Productos"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_edit"
            app:destination="@id/nav_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_inproccess"
        android:name="com.example.supermercado.ui.expirationInProccess.inProccess"
        android:label="Próximos a caducar"
        tools:layout="@layout/fragment_inproccess" >
        <action
            android:id="@+id/action_nav_inproccess_to_nav_edit"
            app:destination="@id/nav_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_expiration"
        android:name="com.example.supermercado.ui.expiraton.expiration"
        android:label="Vencidos"
        tools:layout="@layout/fragment_expiration" >
        <action
            android:id="@+id/action_nav_expiration_to_nav_edit"
            app:destination="@id/nav_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_add"
        android:name="com.example.supermercado.ui.addproduct.addFragment"
        android:label="Añadir"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_nav_add_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/nav_edit"
        android:name="com.example.supermercado.ui.edit.editFragment"
        android:label="Detalles"
        tools:layout="@layout/fragment_edit" >
        <action
            android:id="@+id/action_nav_edit_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
</navigation>